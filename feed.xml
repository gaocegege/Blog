---
layout: none
---
<?xml version="1.0" encoding="utf-8" ?>
<rss version="2.0">
{% assign add_protocol = false %}
{% assign protocol = site.url | split: '/' | first %}
{% if site.url != '' and protocol != 'http:' and protocol != 'https:' %}
  {% assign site_url = site.url | prepend: 'http:' %}
  {% assign add_protocol = true %}
{% else %}
  {% assign site_url = site.url %}
{% endif %}
<channel>
<title type="text">{{ site.title }}</title>
<discription>个人博客</discription>
<!-- <generator uri="https://github.com/mojombo/jekyll">Jekyll</generator> -->
<!-- <link rel="self" type="application/atom+xml" href="{{ site_url }}/feed.xml" /> -->
<link type="text/html" href="{{ site_url }}/" />
<pubDate>{{ site.time | date_to_xmlschema }}</pubDate>
<!-- <id>{{ site_url }}/</id>
<author>
  <name>{{ site.owner.name }}</name>
  <uri>{{ site_url }}/</uri>
  <email>{{ site.owner.email }}</email>
</author> -->
{% for post in site.posts limit:20 %}

<item>
  <title type="html"><![CDATA[{{ post.title | cdata_escape }}]]></title>
  <link type="text/html" href="{% if post.link %}{{ post.link }}{% else %}{{ site_url }}{{ post.url }}{% endif %}"/>
  <id>{{ site_url }}{{ post.id }}</id>
  {% if post.modified %}<published>{{ post.date | date_to_xmlschema }}</published>
  <pubDate>{{ post.modified }}T00:00:00-00:00</pubDate>
  {% else %}<pubDate>{{ post.date | date_to_xmlschema }}</pubDate>
  <!-- <updated>{{ post.date | date_to_xmlschema }}</updated> -->{% endif %}
  <!-- <author>
    <name>{{ site.owner.name }}</name>
    <uri>{{ site_url }}</uri>
    <email>{{ site.owner.email }}</email>
  </author> -->
  {% for tag in post.tags %}<category scheme="{{ site_url }}/tags/#{{ tag | uri_escape }}" term="{{ tag }}" />{% endfor %}
  <discription type="html">
  {% if add_protocol %}
    {{ post.content | xml_escape | replace: site.url, site_url }}
  {% else %}
    {{ post.content | xml_escape }}
  {% endif %}
  &lt;p&gt;&lt;a href=&quot;{{ site_url }}{{ post.url }}&quot;&gt;{{ post.title }}&lt;/a&gt; was originally published by {{ site.owner.name }} at &lt;a href=&quot;{{ site_url }}&quot;&gt;{{ site.title }}&lt;/a&gt; on {{ post.date | date: "%B %d, %Y" }}.&lt;/p&gt;</discription>
</item>
{% endfor %}
</channel>